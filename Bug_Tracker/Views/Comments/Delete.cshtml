@model Bug_Tracker.Models.Comment
<br />
<h3>Are you sure you want to delete this comment?</h3>
<br />
<div>
    <p>@Html.DisplayFor(model => model.Text)</p>
    <br />
    <form asp-action="Delete" asp-route-ticketId="@ViewData["TicketId"]">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
<br />
<br />
<div>
    <a asp-action="Index" asp-route-ticketId="@ViewData["TicketId"]" class="btn btn-outline-secondary"><< Back</a>
</div>
