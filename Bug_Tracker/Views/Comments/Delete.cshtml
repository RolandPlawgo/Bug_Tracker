@model Bug_Tracker.Models.Comment
@{
    ViewData["Title"] = "Delete Comment";
}
<br />
<h1 class="h3">Are you sure you want to delete this comment?</h1>
<br />
<div>
    <p>@Html.DisplayFor(model => model.Text)</p>
    <p>@Html.DisplayFor(model => model.Date)</p>
    <br />
    <form asp-action="Delete" asp-route-ticketId="@ViewData["TicketId"]">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
<br />
<br />
<div>
    <a asp-controller="Tickets" asp-action="Details" asp-route-id="@ViewData["TicketId"]" class="btn btn-outline-secondary"><< Back</a>
</div>
