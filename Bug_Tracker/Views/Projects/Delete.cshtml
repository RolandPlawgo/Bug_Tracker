@model Bug_Tracker.Models.Project
@{
    ViewData["Title"] = "Delete Project";
}
<br />
<h1 class="h3">Are you sure you want to delete this project?</h1>
<br />
<div>    
    <h4>@Html.DisplayFor(m => m.Title)</h4>
    <p>@Html.DisplayFor(m => m.Description)</p>
        
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <br />
    <br />
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary"><< Back</a>
</div>
